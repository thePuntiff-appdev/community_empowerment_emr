<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All encounters
    </h1>

    <a href="/encounters/new" class="btn btn-block btn-outline-secondary">
      Add a new encounter
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "encounter_templates/encounters_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Provider
        </th>

        <th>
          Patient
        </th>

        <th>
          Chief complaint
        </th>

        <th>
          Notes
        </th>

        <th>
          Location
        </th>

        <th>
          Approving provider
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @encounters.each do |encounter| %>
      <tr>
        <td>
          <%= encounter.id %>
        </td>

        <td>
          <% if encounter.provider.present? %>
            <a href="/providers/<%= encounter.provider.id %>">
              <%= encounter.provider.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if encounter.patient.present? %>
            <a href="/patients/<%= encounter.patient.id %>">
              <%= encounter.patient.firstname %>
            </a>
          <% end %>
        </td>

        <td>
          <%= encounter.chief_complaint %>
        </td>

        <td>
          <%= encounter.notes %>
        </td>

        <td>
          <% if encounter.location.present? %>
            <a href="/locations/<%= encounter.location.id %>">
              <%= encounter.location.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if encounter.approving_provider.present? %>
            <a href="/providers/<%= encounter.approving_provider.id %>">
              <%= encounter.approving_provider.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(encounter.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(encounter.updated_at) %> ago
        </td>

        <td>
          <a href="/encounters/<%= encounter.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @encounters, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
