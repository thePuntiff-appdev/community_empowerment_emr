<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All encounters
    </h1>

    <a href="/encounters/new" class="btn btn-block btn-outline-secondary">
      Add a new encounter
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Provider
        </th>

        <th>
          Patient
        </th>

        <th>
          Chief complaint
        </th>

        <th>
          Notes
        </th>

        <th>
          Location
        </th>

        <th>
          Approving provider
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @encounters.each do |encounter| %>
      <tr>
        <!-- Display encounter.id start -->
        <td>
          <%= encounter.id %>
        </td>
        <!-- Display encounter.id end -->

        <!-- Display encounter.provider_id start -->
        <td>
          <%= encounter.provider.created_at %>
        </td>
        <!-- Display encounter.provider_id end -->

        <!-- Display encounter.patient_id start -->
        <td>
          <%= encounter.patient.firstname %>
        </td>
        <!-- Display encounter.patient_id end -->

        <!-- Display encounter.chief_complaint start -->
        <td>
          <%= encounter.chief_complaint %>
        </td>
        <!-- Display encounter.chief_complaint end -->

        <!-- Display encounter.notes start -->
        <td>
          <%= encounter.notes %>
        </td>
        <!-- Display encounter.notes end -->

        <!-- Display encounter.location_id start -->
        <td>
          <%= encounter.location.name %>
        </td>
        <!-- Display encounter.location_id end -->

        <!-- Display encounter.approving_provider_id start -->
        <td>
          <%= encounter.approving_provider_id %>
        </td>
        <!-- Display encounter.approving_provider_id end -->

        <!-- Display encounter.created_at start -->
        <td>
          <%= time_ago_in_words(encounter.created_at) %> ago
        </td>
        <!-- Display encounter.created_at end -->

        <!-- Display encounter.updated_at start -->
        <td>
          <%= time_ago_in_words(encounter.updated_at) %> ago
        </td>
        <!-- Display encounter.updated_at end -->

        <td>
          <a href="/encounters/<%= encounter.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
