<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Encounter #<%= @encounter.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/encounters" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/encounters/<%= @encounter.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit encounter
        </a>
      </div>

      <div class="col">
        <a href="/delete_encounter/<%= @encounter.id %>" class="btn btn-block btn-outline-secondary">
          Delete encounter
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Provider
      </dt>
      <dd>
        <% if @encounter.provider.present? %>
          <a href="/providers/<%= @encounter.provider_id %>">
            <%= @encounter.provider.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Patient
      </dt>
      <dd>
        <% if @encounter.patient.present? %>
          <a href="/patients/<%= @encounter.patient_id %>">
            <%= @encounter.patient.firstname %>
          </a>
        <% end %>
      </dd>

      <dt>
        Chief complaint
      </dt>
      <dd>
        <%= @encounter.chief_complaint %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @encounter.notes %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <% if @encounter.location.present? %>
          <a href="/locations/<%= @encounter.location_id %>">
            <%= @encounter.location.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Approving provider
      </dt>
      <dd>
        <% if @encounter.approving_provider.present? %>
          <a href="/providers/<%= @encounter.approving_provider_id %>">
            <%= @encounter.approving_provider.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@encounter.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@encounter.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "encounter_templates/encounter_prescriptions" %>
  </div>
</div>
