<h1>
  Add a new medication
</h1>


<hr>

<!-- Form medication start -->
<form action="/create_medication" method="post">
<!-- Form medication end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for med_type_id start -->
  <div class="form-group">
    <label for="med_type_id">
      Med type
    </label>

    <!-- Input for med_type_id start -->
    <%= select_tag(:med_type_id, options_from_collection_for_select(MedType.all, :id, :name, @medication.med_type_id), :class => "form-control") %>
    <!-- Input for med_type_id end -->
  </div>
  <!-- Label and input for med_type_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create medication
  </button>
</form>

<hr>

<a href="/medications">
  Go back
</a>
