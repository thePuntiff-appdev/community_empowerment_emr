<h1>
  Edit med type #<%= @med_type.id %>
</h1>

<hr>

<!-- Form med_type start -->
<form action="/update_med_type/<%= @med_type.id %>" method="post">
<!-- Form med_type end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @med_type.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update med type
  </button>
</form>

<hr>

<a href="/med_types">
  Go back
</a>
