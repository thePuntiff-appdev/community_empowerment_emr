<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Medications

    <a data-toggle="collapse" href="#med_type_medications_new_form">
      Add medication
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @med_type.medications.each do |medication| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/medications/<%= medication.id %>">
          <%= medication.name %>
        </a>

        <a href="/delete_medication_from_med_type/<%= medication.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="med_type_medications_new_form">
        <%= render partial: "med_type_templates/med_type_medications_new_form" %>
      </div>
    </div>

  </ul>
</div>
