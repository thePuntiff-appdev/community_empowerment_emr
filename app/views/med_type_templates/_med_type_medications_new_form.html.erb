<form action="/create_medication_from_med_type" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @medication.name %>">
  </div>

  <input type="hidden" name="med_type_id" value="<%= @med_type.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create medication
  </button>
</form>
