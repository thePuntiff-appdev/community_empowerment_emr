<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Credential #<%= @credential.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/credentials" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/credentials/<%= @credential.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit credential
        </a>
      </div>

      <div class="col">
        <a href="/delete_credential/<%= @credential.id %>" class="btn btn-block btn-outline-secondary">
          Delete credential
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @credential.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@credential.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@credential.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "credential_templates/credential_provider_credentials" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "credential_templates/credential_providers" %>
  </div>
</div>
