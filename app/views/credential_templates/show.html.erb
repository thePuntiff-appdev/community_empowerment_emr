<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Credential #<%= @credential.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/credentials" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link credential start -->
      <div class="col">
        <a href="/credentials/<%= @credential.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit credential
        </a>
      </div>
      <!-- Edit link credential end -->

      <!-- Delete link credential start -->
      <div class="col">
        <a href="/delete_credential/<%= @credential.id %>" class="btn btn-block btn-outline-secondary">
          Delete credential
        </a>
      </div>
      <!-- Delete link credential end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @credential.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@credential.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@credential.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "credential_templates/credential_provider_credentials" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "credential_templates/credential_providers" %>
  </div>
</div>
<!-- Show Page Customization end -->
