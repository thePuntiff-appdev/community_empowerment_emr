<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All credentials
    </h1>

    <a href="/credentials/new" class="btn btn-block btn-outline-secondary">
      Add a new credential
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @credentials.each do |credential| %>
      <tr>
        <!-- Display credential.id start -->
        <td>
          <%= credential.id %>
        </td>
        <!-- Display credential.id end -->

        <!-- Display credential.name start -->
        <td>
          <%= credential.name %>
        </td>
        <!-- Display credential.name end -->

        <!-- Display credential.created_at start -->
        <td>
          <%= time_ago_in_words(credential.created_at) %> ago
        </td>
        <!-- Display credential.created_at end -->

        <!-- Display credential.updated_at start -->
        <td>
          <%= time_ago_in_words(credential.updated_at) %> ago
        </td>
        <!-- Display credential.updated_at end -->

        <td>
          <a href="/credentials/<%= credential.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @credentials, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
