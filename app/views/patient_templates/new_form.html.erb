<h1>
  Add a new patient
</h1>


<hr>

<!-- Form patient start -->
<form action="/create_patient" method="post">
<!-- Form patient end -->

  <!-- Label and input for firstname start -->
  <div class="form-group">
    <label for="firstname">
      Firstname
    </label>

    <!-- Input for firstname start -->
    <input type="text" id="firstname" name="firstname" class="form-control">
    <!-- Input for firstname end -->
  </div>
  <!-- Label and input for firstname end -->

  <!-- Label and input for lastname start -->
  <div class="form-group">
    <label for="lastname">
      Lastname
    </label>

    <!-- Input for lastname start -->
    <input type="text" id="lastname" name="lastname" class="form-control">
    <!-- Input for lastname end -->
  </div>
  <!-- Label and input for lastname end -->

  <!-- Label and input for sex_id start -->
  <div class="form-group">
    <label for="sex_id">
      Sex
    </label>

    <!-- Input for sex_id start -->
    <%= select_tag(:sex_id, options_from_collection_for_select(Sex.all, :id, :name, @patient.sex_id), :class => "form-control") %>
    <!-- Input for sex_id end -->
  </div>
  <!-- Label and input for sex_id end -->

  <!-- Label and input for dob start -->
  <div class="form-group">
    <label for="dob">
      Dob
    </label>

    <!-- Input for dob start -->
    <input type="text" id="dob" name="dob" class="form-control">
    <!-- Input for dob end -->
  </div>
  <!-- Label and input for dob end -->

  <!-- Label and input for phone_num start -->
  <div class="form-group">
    <label for="phone_num">
      Phone num
    </label>

    <!-- Input for phone_num start -->
    <input type="text" id="phone_num" name="phone_num" class="form-control">
    <!-- Input for phone_num end -->
  </div>
  <!-- Label and input for phone_num end -->

  <button class="btn btn-block btn-outline-secondary">
    Create patient
  </button>
</form>

<hr>

<a href="/patients">
  Go back
</a>
