<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Provider #<%= @provider.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/providers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link provider start -->
      <div class="col">
        <a href="/providers/<%= @provider.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit provider
        </a>
      </div>
      <!-- Edit link provider end -->

    </div>

    <dl>
      <dt>
        Firstname
      </dt>
      <!-- Display firstname start -->
      <dd>
        <%= @provider.firstname %>
      </dd>
      <!-- Display firstname end -->

      <dt>
        Lastname
      </dt>
      <!-- Display lastname start -->
      <dd>
        <%= @provider.lastname %>
      </dd>
      <!-- Display lastname end -->

      <dt>
        Email
      </dt>
      <!-- Display email start -->
      <dd>
        <%= @provider.email %>
      </dd>
      <!-- Display email end -->

      <dt>
        Password
      </dt>
      <!-- Display password start -->
      <dd>
        <%= @provider.password %>
      </dd>
      <!-- Display password end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@provider.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@provider.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "provider_templates/provider_provider_credentials" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "provider_templates/provider_encounters" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "provider_templates/provider_prescriptions" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "provider_templates/provider_approved_encounters" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "provider_templates/provider_credentials" %>
  </div>
</div>
<!-- Show Page Customization end -->
