<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All providers
    </h1>

    <a href="/providers/new" class="btn btn-block btn-outline-secondary">
      Add a new provider
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Firstname
        </th>

        <th>
          Lastname
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @providers.each do |provider| %>
      <tr>
        <td>
          <%= provider.id %>
        </td>

        <td>
          <%= provider.firstname %>
        </td>

        <td>
          <%= provider.lastname %>
        </td>

        <td>
          <%= provider.email %>
        </td>

        <td>
          <%= provider.password %>
        </td>

        <td>
          <%= time_ago_in_words(provider.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(provider.updated_at) %> ago
        </td>

        <td>
          <a href="/providers/<%= provider.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @providers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
