<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Provider Credentials

    <a data-toggle="collapse" href="#provider_provider_credentials_new_form">
      Add provider credential
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @provider.provider_credentials.each do |provider_credential| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/provider_credentials/<%= provider_credential.id %>">
          <%= provider_credential.provider_id %>
        </a>

      </li>
    <% end %>

  </ul>
</div>
