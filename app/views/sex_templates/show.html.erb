<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Sex #<%= @sex.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/sexes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link sex start -->
      <div class="col">
        <a href="/sexes/<%= @sex.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit sex
        </a>
      </div>
      <!-- Edit link sex end -->

      <!-- Delete link sex start -->
      <div class="col">
        <a href="/delete_sex/<%= @sex.id %>" class="btn btn-block btn-outline-secondary">
          Delete sex
        </a>
      </div>
      <!-- Delete link sex end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @sex.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@sex.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@sex.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "sex_templates/sex_patients" %>
  </div>
</div>
<!-- Show Page Customization end -->
