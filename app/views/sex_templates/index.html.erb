<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All sexes
    </h1>

    <a href="/sexes/new" class="btn btn-block btn-outline-secondary">
      Add a new sex
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @sexes.each do |sex| %>
      <tr>
        <!-- Display sex.id start -->
        <td>
          <%= sex.id %>
        </td>
        <!-- Display sex.id end -->

        <!-- Display sex.name start -->
        <td>
          <%= sex.name %>
        </td>
        <!-- Display sex.name end -->

        <!-- Display sex.created_at start -->
        <td>
          <%= time_ago_in_words(sex.created_at) %> ago
        </td>
        <!-- Display sex.created_at end -->

        <!-- Display sex.updated_at start -->
        <td>
          <%= time_ago_in_words(sex.updated_at) %> ago
        </td>
        <!-- Display sex.updated_at end -->

        <td>
          <a href="/sexes/<%= sex.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @sexes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
