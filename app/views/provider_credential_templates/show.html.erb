<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Provider credential #<%= @provider_credential.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/provider_credentials" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_provider == @provider_credential.provider %>
          <a href="/provider_credentials/<%= @provider_credential.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit provider_credential
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_provider == @provider_credential.provider %>
          <a href="/delete_provider_credential/<%= @provider_credential.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete provider_credential
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Provider
      </dt>
      <dd>
        <% if @provider_credential.provider.present? %>
          <a href="/providers/<%= @provider_credential.provider_id %>">
            <%= @provider_credential.provider.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Credential
      </dt>
      <dd>
        <% if @provider_credential.credential.present? %>
          <a href="/credentials/<%= @provider_credential.credential_id %>">
            <%= @provider_credential.credential.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@provider_credential.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@provider_credential.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

