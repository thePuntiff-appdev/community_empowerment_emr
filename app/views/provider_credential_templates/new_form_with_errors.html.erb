<!-- Validation failure messages -->
<% if @provider_credential.present? %>
  <% if @provider_credential.errors.any? %>
    <% @provider_credential.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new provider credential
</h1>


<hr>

<!-- Form provider_credential start -->
<form action="/create_provider_credential" method="post">
<!-- Form provider_credential end -->

  <!-- Label and input for provider_id start -->
  <div class="form-group">
    <label for="provider_id">
      Provider
    </label>

    <!-- Input for provider_id start -->
    <%= select_tag(:provider_id, options_from_collection_for_select(Provider.all, :id, :created_at, @provider_credential.provider_id), :class => "form-control") %>
    <!-- Input for provider_id end -->
  </div>
  <!-- Label and input for provider_id end -->

  <!-- Label and input for credential_id start -->
  <div class="form-group">
    <label for="credential_id">
      Credential
    </label>

    <!-- Input for credential_id start -->
    <input type="text" id="credential_id" name="credential_id" class="form-control" value="<%= @provider_credential.credential_id %>">
    <!-- Input for credential_id end -->
  </div>
  <!-- Label and input for credential_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create provider credential
  </button>
</form>

<hr>

<a href="/provider_credentials">
  Go back
</a>
