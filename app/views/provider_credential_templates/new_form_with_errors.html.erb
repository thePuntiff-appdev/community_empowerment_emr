<% if @provider_credential.present? %>
  <% if @provider_credential.errors.any? %>
    <% @provider_credential.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new provider credential
</h1>


<hr>

<form action="/create_provider_credential" method="post">

  <input type="hidden" name="provider_id" value="<%= current_provider.id %>">

  <div class="form-group">
    <label for="credential_id">
      Credential
    </label>

    <%= select_tag(:credential_id, options_from_collection_for_select(Credential.all, :id, :name, @provider_credential.credential_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create provider credential
  </button>
</form>

<hr>

<a href="/provider_credentials">
  Go back
</a>
